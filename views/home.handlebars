<!-- home.handlebars -->

<div class="container">
    <div class="col-md-12">
        <div class="text-center">
            <h1> Fit-to-Scrape: </h1>
            <h3>Daily Horoscope</h3>
        </div>

    </div>
    <div class="row">
        <div class="col s12 m6">
            {{#if article}} {{#each article}}
            <div class="card medium deep-purple darken-3">
                <div class="card-content">
                    <span class="card-title white-text">{{this.title}}</span>
                    <p class="deep-purple-text text-lighten-5"> {{this.summary}}</p>
                    <br>
                    <a href={{this.link}} type="button" class="btn btn-success more" id="more">Read More</a>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
                
            </div>
            {{/each}} {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Uh Oh.
                        <br> Looks like you need to scrape !</h4>
                </div>
            </div>
            {{/if}}
        </div>
    </div>