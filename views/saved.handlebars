{{!-- saved.handlebars --}}
<div class="container">
    <div class="col-md-12">
        <div class="text-center">
            <h1> Saved Horoscopes </h1>
            <h3>these things resonated with you...</h3>
        </div>

    </div>
    <div class="row">
        <div class="col s12 m6">
            {{#if article}} 
            {{#each article}}
            <div class="card deep-purple darken-3">
                <div class="card-content">
                    <span class="card-title white-text">
                        {{this.title}}</span>
                    <p class="deep-purple-text text-lighten-5"> 
                        {{this.summary}}</p>
                    <br>
                    <a href={{this.link}} type="button" class="btn btn-success more" id="more">Read More</a>
                    <br>
                    <br>
                     <button data-target="modal1" class="btn waves-effect waves-light btn addNote modal-trigger" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                    <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                </div>
            </div>
            {{/each}} {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Go save something!</h4>
                </div>
            </div>
            {{/if}}
        </div>
    </div>

    <!--Clicked Notes Modal-->
    {{#each article}}
    {{> notes-modal }}
    {{/each}}