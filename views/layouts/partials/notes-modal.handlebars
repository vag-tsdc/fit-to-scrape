{{!-- notes-modal.handlebars --}}
<div  class="modal modalNote" id="modal" data-id="noteModal{{this._id}}">
    <div class="modal-content">
        {{!--
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Notes for {{this.title}}</h4>
        </div> --}}
        <div class="row">
            {{#if this.notes}} {{#each this.notes}}
            <div class="col s12">
                <p class="previousNotes"> {{this.body}}</p>
                <button type="button" class="waves-effect waves-light btn deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="row">
            <div class="col s12">
                <h4>No notes for this article yet.</h4>
            </div>
        </div>
        {{/if}}
        <div class="row">
            <form class="col s12">
                <div class="row modal-form-row">
                    <div class="input-field col s12">
                        <textarea id="noteText{{this._id}}" class="form-control" rows="4" placeholder="New Note"></textarea>
                    </div>

                </div>
            </form>

        </div>
        <div class="modal-footer">
            <button type="button" class="waves-effect waves-light btn saveNote" data-id={{this._id}}>Save Note</button>

        </div>
    </div>
</div>